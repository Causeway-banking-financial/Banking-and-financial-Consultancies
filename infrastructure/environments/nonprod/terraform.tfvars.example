# Nonprod environment configuration
# Copy this file to terraform.tfvars and fill in your values.
# DO NOT commit terraform.tfvars to version control.

# ACM certificate ARN for the nonprod domain
# Create with: aws acm request-certificate --domain-name nonprod.finance.causewaygrp.com --validation-method DNS
acm_certificate_arn = "arn:aws:acm:eu-west-1:ACCOUNT_ID:certificate/YOUR-CERT-ID"

# Globally unique suffix for S3 bucket names
# Must be unique across all AWS accounts worldwide
s3_bucket_suffix = "your-unique-suffix"

# Email address for CloudWatch alarm notifications
# An SNS subscription confirmation email will be sent to this address
alarm_email = "ops@causewaygrp.com"

# Cost centre tag for billing allocation (optional)
# cost_centre = "banking-financial"
